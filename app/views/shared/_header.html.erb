<header class='top-page-header'>
  <div class='header-contents'>
    <%= link_to image_tag("planney_logo2.png", class:"planney_logo"), "/" %>
    <div class='nav'>
      <ul class='lists-right'>
        <% if user_signed_in? %>
          <li><%= link_to '家計簿', root_path, class: "nav-link" %></li>
          <li><%= link_to 'スケジュール', "#", class: "nav-link" %></li>
          <li><%= link_to "#{current_user.nickname} さん", "#", class: "user-nickname" %></li>
          <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>